{
  "name": "logseq-datenlp-plugin",
  "author": "benjypng",
  "description": "Auto-insert dates using NLP.",
  "license": "MIT",
  "logseq": {
    "id": "logseq-datenlp-plugin",
    "title": "logseq-datenlp-plugin",
    "icon": "./icon.svg",
    "main": "dist/index.html"
  },
  "scripts": {
    "dev": "npx vite",
    "build": "npx tsc && npx vite build",
    "preview": "npx vite preview",
    "build:css": "npx tailwindcss -i ./src/tailwind.css -o ./src/output.css"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/github",
        {
          "assets": [
            "logseq-datenlp-plugin.zip"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "@logseq/libs": "^0.0.15",
    "chrono-node": "^2.7.6",
    "logseq-dateutils": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@types/eslint": "^8.56.10",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.14.1",
    "vite": "^4.5.3",
    "vite-plugin-logseq": "^1.1.2",
    "vite-tsconfig-paths": "^4.3.2"
  }
}
