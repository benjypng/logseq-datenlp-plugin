{
  "name": "logseq-datenlp-plugin",
  "author": "benjypng",
  "description": "Auto-insert dates using NLP.",
  "license": "MIT",
  "logseq": {
    "id": "logseq-datenlp-plugin",
    "title": "logseq-datenlp-plugin",
    "icon": "./icon.svg",
    "main": "dist/index.html"
  },
  "scripts": {
    "dev": "bunx vite",
    "build": "bunx eslint . --fix && bunx tsc && bunx vite build",
    "prepare": "husky"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/github",
        {
          "assets": [
            "logseq-datenlp-plugin.zip"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "@logseq/libs": "^0.2.8",
    "chrono-node": "^2.9.0",
    "date-fns": "^4.1.0",
    "logseq-dateutils": "^2.1.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/cli": "^4.1.17",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "prettier": "^3.7.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.4",
    "vite-plugin-logseq": "^1.1.2",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
